<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E6E5EA"
    android:padding="16dp">

    <!-- ActionBar with Prussian blue color -->
    <LinearLayout
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="30dp"
        android:elevation="4dp"
        android:orientation="horizontal"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:background="@drawable/rounded_background"
            android:elevation="4dp"
            android:padding="2dp"
            app:srcCompat="@drawable/arrow_back_24" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="30dp"
            android:layout_weight="1"
            android:fontFamily="sans-serif-medium"
            android:gravity="center_horizontal"
            android:text="Support"
            android:textColor="#041058"
            android:textSize="20sp"
            android:textStyle="bold" />

    </LinearLayout>

    <!-- Text "Need help? Talk to us!" and icon below it -->
    <TextView
        android:id="@+id/textViewNeedHelp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/imageViewIcon"
        android:layout_centerHorizontal="true"

        android:layout_marginTop="-56dp"
        android:text="Hello, How can we \n      Help you?"
        android:textSize="24sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/imageViewIcon"
        android:layout_width="400dp"
        android:layout_height="300dp"
        android:layout_below="@id/toolbar"
        android:layout_centerHorizontal="true"
        android:src="@drawable/support" />

    <!-- Description -->


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textViewNeedHelp"
        android:layout_marginTop="40dp"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/resetPasswordLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="20dp"

            android:layout_marginEnd="20dp"
            android:background="@drawable/rounded_background"
            android:elevation="3dp"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/resetPasswordIcon"
                android:layout_width="50dp"
                android:layout_height="50dp"

                android:src="@drawable/support" />

            <TextView
                android:id="@+id/resetPasswordText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="38dp"
                android:elevation="3dp"
                android:gravity="center"
                android:text="Send Message"
                android:textColor="#605252"
                android:textSize="20sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_weight="1"
                android:src="@drawable/baseline_arrow_forward_ios_24" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/changeEmailLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="20dp"
            android:layout_marginTop="40dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/rounded_background"
            android:elevation="3dp"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/changeEmailIcon"
                android:layout_width="50dp"
                android:layout_height="50dp"

                android:padding="8dp"
                android:src="@drawable/email_24" />

            <TextView
                android:id="@+id/changeEmailText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="38dp"
                android:elevation="3dp"
                android:gravity="center"
                android:text="Sent us an  E-mail"
                android:textColor="#605252"
                android:textSize="20sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_weight="1"
                android:src="@drawable/baseline_arrow_forward_ios_24" />

        </LinearLayout>


        <LinearLayout
            android:id="@+id/instagramayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="20dp"
            android:layout_marginTop="40dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/rounded_background"
            android:elevation="3dp"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/instagramIcon"
                android:layout_width="50dp"
                android:layout_height="50dp"

                android:padding="2dp"
                android:src="@drawable/instagram" />

            <TextView
                android:id="@+id/instagramText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="38dp"
                android:elevation="3dp"
                android:gravity="center"
                android:text="Sent query via Instagram"
                android:textColor="#605252"
                android:textSize="16sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_weight="1"
                android:src="@drawable/baseline_arrow_forward_ios_24" />

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
