<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".BookAppointmentActivity">

    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/lawyerImageView"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:scaleType="centerCrop"
        android:src="@drawable/booking" />

    <TextView
        android:id="@+id/lawyerNameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lawyerImageView"
        android:layout_marginTop="16dp"
        android:gravity="center_horizontal"
        android:text="Booking appointment with John Doe"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/lawyerMoneyTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/lawyerNameTextView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:text=""
        android:textSize="16sp" />
    <!-- Add other UI components as needed -->

</RelativeLayout>
