<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#88D61A"

    android:padding="2dp">

    <!-- Cover Photo -->

    <!-- Profile Photo -->

    <!-- User Name -->

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:background="@drawable/rounded_background"
        android:elevation="14dp"
        android:foregroundGravity="clip_horizontal"
        android:padding="20dp">

        <!-- Profile Photo -->
        <ImageView
            android:id="@+id/profilePhoto"
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:src="@drawable/avtar_png"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Username -->
        <TextView
            android:id="@+id/username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ritesh"
            android:textColor="#000000"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/profilePhoto" />

        <!-- User -->
        <TextView
            android:id="@+id/user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="User"
            android:textColor="#7A7979"
            android:textSize="10sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/username" />

        <!-- Edit Icon -->
        <ImageView
            android:id="@+id/editIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/outline_edit_24"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:id="@+id/belowCoverLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="230dp"
        android:background="#F7F7F7"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Reset Password -->
        <LinearLayout
            android:id="@+id/resetPasswordLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="100dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/rounded_background"
            android:elevation="3dp"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/resetPasswordIcon"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/bluebg"
                android:padding="4dp"
                android:src="@drawable/outline_lock_reset_24" />

            <TextView
                android:id="@+id/resetPasswordText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="58dp"
                android:elevation="3dp"
                android:gravity="center"
                android:text="Reset Password"
                android:textColor="#605252"
                android:textSize="20sp"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- Change Email -->
        <LinearLayout
            android:id="@+id/changeEmailLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="40dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/rounded_background"
            android:elevation="3dp"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/changeEmailIcon"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/bluebg"
                android:padding="4dp"
                android:src="@drawable/outline_support_agent_24" />

            <TextView
                android:id="@+id/changeEmailText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="58dp"
                android:elevation="3dp"
                android:gravity="center"
                android:text="Support"
                android:textColor="#605252"
                android:textSize="20sp"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- Profile -->
        <LinearLayout
            android:id="@+id/profileLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="40dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/rounded_background"
            android:elevation="3dp"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/profileIcon"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/bluebg"
                android:padding="4dp"
                android:src="@drawable/outline_supervised_user_circle_24" />

            <TextView
                android:id="@+id/profileText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="58dp"
                android:elevation="3dp"
                android:gravity="center"
                android:text="About"
                android:textColor="#605252"
                android:textSize="20sp"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- Logout -->
        <LinearLayout
            android:id="@+id/logoutLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="40dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/rounded_background"
            android:elevation="3dp"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/logoutIcon"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/bluebg"
                android:padding="4dp"
                android:src="@drawable/baseline_logout_24" />

            <TextView
                android:id="@+id/logoutText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="58dp"
                android:elevation="3dp"
                android:gravity="center"
                android:text="Logout"
                android:textColor="#605252"
                android:textSize="20sp"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>


    <TextView
        android:id="@+id/layoutTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="40dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="40dp"
        android:layout_marginBottom="40dp"
        android:fontFamily="sans-serif-medium"
        android:padding="20dp"
        android:text="PROFILE"
        android:textColor="#FFFFFF"
        android:textSize="18sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="8dp"
        android:layout_weight="1"
        android:elevation="14dp"

        android:gravity="bottom"
        android:orientation="vertical">

        <!-- Your existing content -->


    </LinearLayout>
</RelativeLayout>
